<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Cart">

    <ScrollView
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:id="@+id/scrollView"
        android:layout_above="@+id/total_card"
        android:background="#b9c2ce"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Cart"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

       <android.support.v7.widget.CardView
           android:layout_width="match_parent"
           android:layout_marginTop="0dp"
           android:layout_marginBottom="10dp"
           android:layout_marginStart="10dp"
           android:layout_marginEnd="10dp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:fontFamily="sans-serif-light"
                   android:textSize="18sp"
                   android:gravity="center"
                   android:text="No items in your cart"/>

               <android.support.v7.widget.RecyclerView
                   android:layout_width="match_parent"
                   android:id="@+id/recycler_view"
                   android:visibility="gone"
                   android:layout_height="wrap_content">


               </android.support.v7.widget.RecyclerView>

           </LinearLayout>

       </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Shipping Details"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="200dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="100dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:textSize="15sp"
                        android:paddingTop="5dp"
                        android:textColor="#000"
                        android:paddingEnd="0dp"
                        android:paddingStart="10dp"
                        android:text="Ship to : "/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:gravity="start"
                        android:background="@null"
                        android:paddingTop="5dp"
                        android:hint="United state, County 455 Rd, Mineola, TX, 75773 "
                        android:paddingLeft="10dp"/>

                </LinearLayout>
                <View
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="0dp"
                    android:background="#c8c1c1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:text="Express (1 day)  $20" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="0dp"
                        android:background="#c8c1c1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:text="UK Post (10 days)  free" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="Payment"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:textStyle="bold"/>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="100dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:textSize="15sp"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:text="Master Card " />


                    </RelativeLayout>
                    <View
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="0dp"
                        android:background="#c8c1c1"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="#000"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:text="Pay Pal" />

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>



    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/total_card"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/total"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:padding="10dp"
                android:text="Total : "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/total1"
                android:fontFamily="sans-serif-light"
                android:textColor="#000000"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:padding="10dp"
                android:text="$ 0.00 "/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>