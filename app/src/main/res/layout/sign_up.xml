<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:background="@drawable/google_border">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/google_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="17sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginRight="40dp"
            android:textAllCaps="false"
            android:text="Login with Google"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:background="@drawable/facebook_border">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/face_book"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="17sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginLeft="40dp"
            android:textAllCaps="false"
            android:text="Login with Facebook"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or continue with email"
        android:autoLink="all"
        android:gravity="center_horizontal"
        android:fontFamily="sans-serif-light"
        android:linksClickable="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        />

        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#c8c1c1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:src="@drawable/ic_account_circle_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="25dp"
                android:id="@+id/name"
                android:fontFamily="sans-serif-light"
                android:background="@null"
                android:hint="User Name"/>

        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:background="#c8c1c1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:src="@drawable/ic_phone_android_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="25dp"
                android:background="@null"
                android:id="@+id/phone"
                android:fontFamily="sans-serif-light"
                android:inputType="number"
                android:maxLength="10"
                android:hint="Phone"/>
        </LinearLayout>
        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:background="#c8c1c1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:src="@drawable/ic_email_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="25dp"
                android:inputType="textEmailAddress"
                android:id="@+id/email"
                android:fontFamily="sans-serif-light"
                android:background="@null"
                android:hint="Email"/>


        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:background="#c8c1c1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:src="@drawable/ic_lock_outline_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="25dp"
                android:background="@null"
                android:id="@+id/password"
                android:fontFamily="sans-serif-light"
                android:inputType="textPassword"
                android:hint="Password"/>

        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:background="#c8c1c1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:src="@drawable/ic_lock_outline_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="25dp"
                android:background="@null"
                android:id="@+id/cpassword"
                android:fontFamily="sans-serif-light"
                android:inputType="textPassword"
                android:hint="Confirm Password"/>

        </LinearLayout>

        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:background="#c8c1c1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"/>

    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="true"
            android:background="@drawable/button_background"
            android:textColor="#fff"
            android:id="@+id/signup"
            android:textSize="16sp"
            android:text="Create Account"/>
</LinearLayout>
</ScrollView>